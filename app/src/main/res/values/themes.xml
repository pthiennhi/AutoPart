<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.PRM_AutoPartsSale" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- Font -->
        <item name="fontFamily">@font/nunito_medium</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">#101010</item>
        <item name="colorPrimaryVariant">#404040</item>
        <item name="colorOnPrimary">#E7E7E7</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">#797979</item>
        <item name="colorSecondaryVariant">#949494</item>
        <item name="colorOnSecondary">#F2F2F2</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- For text input fields -->
        <item name="textInputStyle">@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox</item>
        <!-- For radio buttons -->
        <item name="radioButtonStyle">@style/Widget.Material3.CompoundButton.RadioButton</item>
        <!-- For switches -->
        <item name="switchStyle">@style/Widget.Material3.CompoundButton.MaterialSwitch</item>

    </style>

    <style name="Theme.PRM_AutoPartsSale" parent="Base.Theme.PRM_AutoPartsSale" />
</resources>