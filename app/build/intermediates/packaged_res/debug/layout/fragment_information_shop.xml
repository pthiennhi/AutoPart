<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:tools="http://schemas.android.com/tools"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  android:background="@color/white"
  tools:context=".fragment.home.InformationShopFragment">

  <!-- TODO: Update blank fragment layout -->
  <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:paddingHorizontal="24dp"
      android:paddingVertical="12dp">


      <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:background="@color/white"
        android:gravity="center_vertical"
        android:orientation="horizontal">
        <ImageView
          android:id="@+id/iv_back"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_marginRight="12dp"
          android:src="@drawable/ic_arrow_left" />
        <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Cửa hàng"
          android:textSize="20sp" />

      </LinearLayout>
      <ImageView
        android:id="@+id/iv_more"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/ic_more_circle" />

    </LinearLayout>

  </RelativeLayout>

  <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="56dp"
    android:orientation="vertical">
    <ScrollView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      >
      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp"
        android:orientation="vertical">
        <TextView
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Thông tin cửa hàng"
          android:textSize="18sp" />

        <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="24dp"
          android:background="@drawable/background_group_item_profile"
          app:tint="@color/greyscale50"
          android:orientation="vertical">
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shop_name"
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textColor="@color/greyscale900" />

          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="Địa chỉ: Nhà Văn Hóa Sinh Viên ĐHQG, Đường Quảng Trường Sáng Tạo, Đông Hòa, Dĩ An, Binh Duong"
              android:textSize="16sp"
              android:layout_margin="16dp"
              android:textColor="@color/greyscale900" />
            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_marginRight="16dp"
              android:src="@drawable/ic_location" />
          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="Giờ mở cửa: 9AM - 18PM"
              android:textSize="16sp"
              android:layout_margin="16dp"
              android:textColor="@color/greyscale900" />
            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_marginRight="16dp"
              android:src="@drawable/ic_calendar" />
          </LinearLayout>
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">
            <TextView
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="wrap_content"
              android:text="Chăm sóc khách hàng: 84 123 456 789"
              android:textSize="16sp"
              android:layout_margin="16dp"
              android:textColor="@color/greyscale900" />
            <ImageView
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_marginRight="16dp"
              android:src="@drawable/ic_calling" />
          </LinearLayout>
          <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mạng xã hội: "
            android:textSize="16sp"
            android:layout_margin="16dp"
            android:textColor="@color/greyscale900" />
          <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="48dp"
            android:layout_marginBottom="24dp"
            android:orientation="horizontal">
            <ImageView
              android:id="@+id/iv_facebook"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_marginRight="16dp"
              android:src="@drawable/ic_facebook_black" />
            <ImageView
              android:id="@+id/iv_instagram"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_marginRight="16dp"
              android:src="@drawable/ic_instagram_black" />
            <ImageView
              android:id="@+id/iv_twitter"
              android:layout_width="24dp"
              android:layout_height="24dp"
              android:layout_marginRight="16dp"
              android:src="@drawable/ic_twitter_black" />
          </LinearLayout>


        </LinearLayout>

        <TextView
          android:textStyle="bold"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Bản đồ"
          android:layout_marginTop="24dp"
          android:textSize="18sp" />

        <com.google.android.gms.maps.MapView
          xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          xmlns:tools="http://schemas.android.com/tools"
          xmlns:map="http://schemas.android.com/apk/res-auto"
          android:layout_width="match_parent"
          android:layout_height="400dp"
          android:id="@+id/mapView"
          android:layout_marginTop="24dp"
          android:layout_marginBottom="24dp"
          />








      </LinearLayout>
    </ScrollView>
    <LinearLayout
      android:id="@+id/ll_contact_shop"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:background="@drawable/background_tag"
      android:backgroundTint="@color/black"
      android:layout_gravity="center"
      android:gravity="center"
      android:paddingVertical="16dp"
      android:paddingHorizontal="18dp"
      android:layout_marginHorizontal="24dp"
      android:layout_marginVertical= "24dp"
      >
      <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Liên hệ cửa hàng"
        android:textSize="16sp"
        android:textColor="@color/white"
        />
      <ImageView
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginLeft="16dp"
        android:src="@drawable/ic_calling"
        app:tint="@color/white"
        />
    </LinearLayout>

  </LinearLayout>

</FrameLayout>